  <children>
    <AnchorPane fx:id="threadsMainAnchorPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="395.0" prefWidth="682.0" VBox.vgrow="ALWAYS">
      <children>
            <ImageView fitHeight="76.0" fitWidth="136.0" layoutX="76.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../jpg/threads.jpg" />
               </image>
